<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CourseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingRight="1dp">

        <Spinner
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:id="@+id/yearSpinner"></Spinner>

        <Spinner
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/termSpinner"></Spinner>

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/areaSpinner"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingRight="10dp">

        <Spinner
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/majorSpinner"></Spinner>

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@color/colorWarning"
            android:text="검색"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:drawableRight="@drawable/ic_baseline_search_24"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="#ffffff">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/courseListView"
            android:dividerHeight="10dp"
            android:divider="#ffffff"></ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="시간표 만들기가 너무 힘들다고요?\n그럼 아래의 버튼을 클릭해보세요!"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:text="시간표 자동완성"
            android:id="@+id/autoButton"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>